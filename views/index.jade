extends layout

block header
  link(rel='stylesheet' type='text/css' href='/stylesheets/blog.css')
  script(src='//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
  script(src='/javascripts/loadPosts.js')
  title Blog
  
block content
  h1(class='main-title' align='center') Blog

  div(id='content')
    each val in docs
      div(class='post')
        div(class='post-heading')
          div(class='post-title')
            a(href='/#{val._id}') #{val.subject} - #{val.name}
          div(class='post-date meta-text') #{val.date}
        div(class='post-content')
          pre #{val.content}
  div
    input(type='button' id='loadMorePosts' class='btn btn-default' value='Load More Posts' onclick='load()')

  div(class='footer')
    a(href='/feed')
      img(src='/images/rss.png' width=15)

