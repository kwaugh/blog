extends layout
block vars
  - var authenticated = false

block header
  title Password
  link(rel='stylesheet' type='text/css' href='/stylesheets/signin.css')
  
block content
  form.form-signin(method='post')
    h2.form-signin-heading Password
    div.error #{message}
    div.error #{loginError}
    input.form-control(type='password' name='password' placeholder='Password' required)
    br
    input.btn.btn-lg.btn-primary.btn-block(type='submit' value='Submit')
